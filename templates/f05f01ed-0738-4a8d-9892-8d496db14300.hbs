<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{{validation.name}} - Laudo</title>
    <style>
      body { font-family: Arial, Helvetica, sans-serif; margin: 20px; }
      h1 { font-size: 20px; }
      .meta { margin-top: 8px; color: #666; }
      .section { margin-top: 16px; }
    </style>
  </head>
  <body>
    <h1>{{validation.name}}</h1>
    <div class="meta">Cliente: {{client.name}} • Gerado em: {{formatDate generatedAt}}</div>

    <div class="section">
      <h2>Resumo</h2>
      <p>Descrição: {{validation.description}}</p>
      <p>Intervalo de Temperatura: {{validation.minTemperature}}°C - {{validation.maxTemperature}}°C</p>
    </div>

    <div class="section">
      <h2>Dados (exemplo)</h2>
      {{#if sensorDataSample}}
        <table border="1" cellpadding="6" cellspacing="0">
          <thead>
            <tr><th>Timestamp</th><th>Temperatura</th><th>Umidade</th></tr>
          </thead>
          <tbody>
            {{#each sensorDataSample}}
              <tr>
                <td>{{this.timestamp}}</td>
                <td>{{this.temperature}}</td>
                <td>{{this.humidity}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <p>Nenhum dado disponível.</p>
      {{/if}}
    </div>
  </body>
</html>
