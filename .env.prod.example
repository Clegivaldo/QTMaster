# Database Configuration
POSTGRES_DB=laudo_db
POSTGRES_USER=laudo_user
POSTGRES_PASSWORD=your-super-secure-postgres-password

# Redis Configuration
REDIS_PASSWORD=your-super-secure-redis-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-key-at-least-32-characters
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
FRONTEND_URL=localhost:3000
VITE_API_URL=/api
VITE_APP_NAME=Sistema de Laudos Térmicos

# Ports (set service container/listen ports here)
# BACKEND_PORT is the port the backend listens on (default set in backend/.env)
# FRONTEND_PORT is the port the frontend container serves (typically 80 for nginx)
BACKEND_PORT=3001
FRONTEND_PORT=80

# FastReport Configuration
FASTREPORT_LICENSE=your-fastreport-license-key

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-chars

# Monitoring Configuration
GRAFANA_PASSWORD=your-grafana-admin-password

# Logging Configuration
LOG_LEVEL=info
XLS_READ_TIMEOUT_MS=10000
FALLBACK_MODE=python
PYTHON_FALLBACK_BIN=python3
PYTHON_FALLBACK_SCRIPT=python/fallback_parser.py
PYTHON_FALLBACK_TIMEOUT_MS=20000

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=Sistema de Laudos <noreply@yourdomain.com>

# Backup Storage Configuration
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# ⚠️ IMPORTANTE: VITE_API_URL deve ser /api (relativo) para produção Docker
# O Nginx faz o proxy de /api para backend:5000
# NÃO use http://localhost:5000/api pois o navegador tentará acessar a máquina do cliente

